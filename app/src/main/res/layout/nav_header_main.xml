<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/overAllMargin"
    android:background="@drawable/nav_header_background"
    android:gravity="bottom"
    android:theme="@style/AppTheme.AppBarOverLay">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/navUserImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="@dimen/nav_divider_height"
        android:layout_marginTop="@dimen/nav_user_image_margin"
        android:layout_marginStart="@dimen/overAllMargin"
        android:src="@drawable/user_image"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/navUserName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="@dimen/radius"
        android:layout_margin="@dimen/overAllMargin"
        android:textSize="@dimen/nav_user_text_size"
        android:text="@string/userName"
        />

</LinearLayout>